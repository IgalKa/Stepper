<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AppController">
   <content>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="800.0">
         <top>
            <VBox alignment="TOP_CENTER" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="TOP_CENTER" VBox.vgrow="NEVER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stepper" textAlignment="CENTER">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <HBox spacing="15.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="loadXML" mnemonicParsing="false" onAction="#loadXMLFile" text="Load XML File" />
                        <Label fx:id="loadedXML" alignment="BASELINE_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="No XML file currently loaded" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <TabPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                  <Tab text="Statistics">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="180.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                  <Tab text="Executions History">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                <Tab text="Flows Execution">
                     <content>
                        <fx:include fx:id="executionComponent" source="../../../../Controller/src/controllers/flowexecution/Execution.fxml" />
                     </content>
                </Tab>
                  <Tab text="Flows Definition">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <fx:include fx:id="definitionComponent" source="../../../../Controller/src/controllers/flowdefinition/Definition.fxml" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </TabPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
